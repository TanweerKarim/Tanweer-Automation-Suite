				},
				{
					"listen": "test",
					"script": {
						"exec": [
							"pm.test('404 Status for Petid not found', function () {",
							"  if (pm.response.code === 404) {",
							"    var json = pm.response.json();",
							"    pm.expect(json.message.toLowerCase()).to.include('not found');",
							"  }",
							"});"
						],
